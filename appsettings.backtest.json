{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "TradingBot.Backtest": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "BacktestOptions": {
    "CommissionPerContract": 2.50,
    "BaseSlippagePercent": 0.5,
    "InitialCapital": 100000,
    "MaxPositionSizePercent": 0.02
  },
  "WfvOptions": {
    "TrainingWindowDays": 30,
    "ValidationWindowDays": 7,
    "StepSizeDays": 7,
    "PurgeDays": 1,
    "EmbargoDays": 1,
    "MinSharpeThreshold": 0.5,
    "MaxDrawdownLimit": 0.15,
    "MinTradesPerFold": 10
  },
  "ExecutionSimulator": {
    "SlippageModel": "SpreadBased",
    "MarketImpactFactor": 0.001,
    "PartialFillProbability": 0.1,
    "RejectProbability": 0.05
  },
  "HistoricalData": {
    "Provider": "TopstepX",
    "DataPath": "data/historical",
    "CacheEnabled": true,
    "CacheTimeoutMinutes": 60
  },
  "MetricSink": {
    "StorageType": "Json",
    "StoragePath": "reports/bt",
    "FlushIntervalSeconds": 30,
    "IncludeRawData": true
  },
  "ModelRegistry": {
    "StorageType": "FileSystem",
    "ModelsPath": "models",
    "MetadataPath": "models/metadata",
    "CacheEnabled": true
  },
  "RiskManagement": {
    "MaxDailyLoss": 0.02,
    "MaxPositionSize": 10,
    "StopLossMultiplier": 2.0,
    "TakeProfitMultiplier": 3.0,
    "RiskPerTrade": 0.01
  },
  "ValidationGates": {
    "MinSharpeRatio": 0.5,
    "MaxDrawdown": 0.15,
    "MinWinRate": 0.4,
    "MinProfitableFolds": 0.6,
    "MinTradesPerFold": 10,
    "MaxConsecutiveLosses": 5
  },
  "ContractConfiguration": {
    "Contracts": {
      "ES": {
        "Symbol": "ES",
        "TickSize": 0.25,
        "PointValue": 50.0,
        "MinSpreadMultiplier": 1.0,
        "Description": "E-mini S&P 500 futures",
        "MaxPriceDeviation": 0.10,
        "ValidateDataIntegrity": true
      },
      "NQ": {
        "Symbol": "NQ", 
        "TickSize": 0.25,
        "PointValue": 20.0,
        "MinSpreadMultiplier": 1.0,
        "Description": "E-mini NASDAQ-100 futures",
        "MaxPriceDeviation": 0.10,
        "ValidateDataIntegrity": true
      }
    },
    "SecuritySettings": {
      "MaxRequestsPerMinute": 100,
      "MaxDataRangeDays": 365,
      "ValidateInputs": true,
      "SanitizeSymbols": true,
      "LogSecurityEvents": true
    }
  },
  "Security": {
    "MaxMemoryUsageMB": 2048,
    "MaxExecutionTimeMinutes": 120,
    "EnableInputValidation": true,
    "EnableOutputSanitization": true,
    "LogLevel": "Information",
    "MaxConcurrentOperations": 10
  },
  "HttpClient": {
    "Timeout": "00:05:00",
    "MaxRetries": 3,
    "BaseAddress": "https://api.topstepx.com",
    "DefaultHeaders": {
      "User-Agent": "TradingBot-BacktestService/1.0"
    }
  },
  "Paths": {
    "BacktestResults": "reports/backtests",
    "WfvResults": "reports/wfv", 
    "MetricsOutput": "reports/metrics",
    "ModelsPath": "models",
    "HistoricalData": "data/historical"
  }
}