name: Intermarket Correlations
on:
  schedule:
    # 24/7 INTERMARKET CORRELATION ANALYSIS (GLOBAL MARKET RELATIONSHIPS)
    # Asian Session (18:00-23:59 CT) - Monitor Asian market correlations
    - cron: '0 1,3,5 * * *'              # Every 2 hours Asian session
    # European Session (02:00-05:00 CT) - European market relationships
    - cron: '30 8,10 * * *'              # Every 2 hours European session
    # US Session (08:30-16:00 CT) - Maximum intermarket monitoring
    - cron: '0,30 14,16,18,20 * * 1-5'   # Every 2 hours, 30-min offset US session
    # Extended Hours Correlation Analysis
    - cron: '45 6,12,22 * * *'           # Extended hours intermarket analysis
    # Total: ~16 runs/day = 112 runs/week for global correlation tracking
  workflow_dispatch:


permissions:
  contents: write

jobs:
  intermarket:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v4
        with:
          python-version: '3.9'
      - run: pip install yfinance pandas numpy scipy requests beautifulsoup4 ta pytrends fredapi
      - run: python Intelligence/scripts/correlations.py
      
      - name: "ðŸ”— Integrate with BotCore Decision Engine"
        run: |
          echo "ðŸ”— Converting Intermarket analysis to BotCore format..."
          
          # Run data integration script for correlation analysis
          python Intelligence/scripts/workflow_data_integration.py \
            --workflow-type "intermarket" \
            --data-path "Intelligence/data/" \
            --output-path "Intelligence/data/integrated/intermarket_correlation.json"
          
          echo "âœ… BotCore intermarket integration complete"
      
      - run: |
          git config user.name "GitHub Actions"
          git config user.email "actions@github.com"
          git add Intelligence/data/
          git add Intelligence/data/integrated/
          git diff --quiet || git commit -m "ðŸ”— Intermarket: BotCore-integrated correlation analysis $(date -u +%Y%m%d_%H%M%S)"
          git push
