name: Intelligence - Daily Report

on:
  schedule:
    # 24/7 TRADING INTELLIGENCE REPORTS (SESSION-ALIGNED REPORTING)
    # Asian Session Opening Report (18:00 CT)
    - cron: '0 0 * * *'                  # Asian session opening report
    # European Session Opening Report (02:00 CT)  
    - cron: '0 8 * * *'                  # European session opening report
    # US Pre-Market Report (07:30 CT)
    - cron: '30 13 * * 1-5'              # US pre-market report
    # US Mid-Session Report (12:00 CT)
    - cron: '0 18 * * 1-5'               # US mid-session report
    # US After-Hours Report (17:00 CT)
    - cron: '0 23 * * 1-5'               # US after-hours report
    # Weekend Comprehensive Report
    - cron: '0 14 * * 0'                 # Sunday comprehensive week-ahead report
    # Total: ~6 reports/day = 42 reports/week for complete session coverage
  workflow_dispatch:  # Allow manual triggering

permissions:
  contents: write

jobs:
  generate-signals:
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
        
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pandas numpy scikit-learn joblib requests
        
    - name: Generate trading signals
      run: |
        python Intelligence/scripts/generate_signals.py
        
    - name: Generate daily report
      run: |
        python Intelligence/scripts/generate_daily_report.py
        
    - name: Upload signals and reports
      uses: actions/upload-artifact@v4
      with:
        name: daily-intelligence-${{ github.run_number }}
        path: |
          Intelligence/data/signals/
          Intelligence/reports/
        retention-days: 30

    - name: "🔗 Integrate with BotCore Decision Engine"
      run: |
        echo "🔗 Converting Daily Report analysis to BotCore format..."
        
        # Run data integration script for daily intelligence reports
        python Intelligence/scripts/workflow_data_integration.py \
          --workflow-type "daily_report" \
          --data-path "Intelligence/reports/daily_report.json" \
          --output-path "Intelligence/data/integrated/daily_intelligence_summary.json"
        
        echo "✅ BotCore daily report integration complete"

    - name: "📤 Commit Integrated Data and Reports"
      run: |
        git config --local user.email "action@github.com"
        git config --local user.name "GitHub Action"
        git add Intelligence/data/integrated/
        git add Intelligence/data/signals/ Intelligence/reports/
        git diff --staged --quiet || git commit -m "📊 Daily Intelligence: BotCore-integrated report and signals [$(date '+%Y-%m-%d %H:%M:%S')]"
        git push || echo "No changes to push"
