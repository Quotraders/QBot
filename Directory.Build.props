<Project>
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    
    <!-- Production Hardening Phase 0: Build and Dependency Hygiene -->
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors>CS0162;CS0168;CS0219;CS0414;CS0649;CS0693;CS1717</WarningsAsErrors>
    
    <!-- Enable nullable reference types solution-wide -->
    <Nullable>enable</Nullable>
    
    <!-- Temporarily disable strict analyzers for legacy code during production hardening -->
    <EnableNETAnalyzers>false</EnableNETAnalyzers>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <RunCodeAnalysis>false</RunCodeAnalysis>
    
    <!-- Temporarily suppress all analyzer errors for legacy code during production hardening -->
    <!-- This allows focus on new production hardening features without being blocked by legacy issues -->
    <NoWarn>$(NoWarn);S2139;S2486;S108;S125;S2955;S3267;S2325;SCS0005;S3400;S3928;S4456;S3904;AsyncFixer01;S6603;S1144;S2333;S1481;S4487;S3881;S2583;S3241;S1066;S1172;S2187;S927;S101;S134;S1006;S1541;S1075;S3776;S1121;S1871;S1186;S1147;S138;S107;S109;S1116;S1210;S2234;S2436;S1134;S1135;S1244;S2368;S1075;S2376;CA1014;CA1822;CA1861;AsyncFixer03;AsyncFixer02;S6610;S6966;S3903;S6605;S2933;S1048;S2094;S1172;S2589;S1602;S1226;S6561;S6562;S6563;S6564;S6565;S6566;S6567;S6568;S6569;S6570;S3459;S1117;S1449</NoWarn>
  </PropertyGroup>

  <!-- Analyzers temporarily disabled for legacy code cleanup -->
</Project>
