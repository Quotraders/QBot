{
  "Trading": {
    "MaxPositionSize": 5,
    "MaxDailyLoss": -1000,
    "DailyProfitTarget": 500,
    "DrawdownLimit": -2000,
    "EnableAutoExecution": false,
    "EnableDryRun": true,
    "DataDirectory": "./data",
    "BackupDirectory": "./backup",
    "DecisionTimeoutSeconds": 30,
    
    // ML/AI Configuration - No more hardcoded values!
    "AIConfidenceThreshold": 0.75,       // Replaces hardcoded 0.7
    "DefaultPositionSizeMultiplier": 2.0, // Replaces hardcoded 2.5
    "RegimeDetectionThreshold": 0.8,     // Replaces hardcoded 1.0
    "StopLossBufferPercentage": 0.04,    // Replaces hardcoded 0.05
    "RewardRiskRatioThreshold": 1.5      // Replaces hardcoded 1.2
  },
  
  "TopstepX": {
    "ApiBaseUrl": "https://api.topstepx.com",
    "UserHubUrl": "https://rtc.topstepx.com/hubs/user",
    "MarketHubUrl": "https://rtc.topstepx.com/hubs/market",
    "HttpTimeoutSeconds": 30,
    "MaxRetries": 5,
    "SignalRReconnectDelayMs": 5000
  },
  
  "Security": {
    "EnableDataEncryption": true,
    "RequireHttps": true,
    "TokenExpirationHours": 24
  },
  
  "Resilience": {
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 1000,
    "CircuitBreakerThreshold": 5
  },
  
  "Observability": {
    "EnableMetrics": true,
    "EnableTracing": true,
    "MetricsPort": 9090
  },
  
  "HealthChecks": {
    "EnableHealthChecks": true,
    "HealthCheckIntervalSeconds": 30,
    "HealthCheckTimeoutSeconds": 10
  }
}