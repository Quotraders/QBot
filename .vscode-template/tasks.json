{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-orchestrator",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/UnifiedOrchestrator/UnifiedOrchestrator.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "build-orchestrator-release",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/UnifiedOrchestrator/UnifiedOrchestrator.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "-c",
        "Release"
      ],
      "problemMatcher": "$msCompile",
      "group": "build",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "restore",
      "command": "dotnet",
      "type": "process",
      "args": [
        "restore",
        "${workspaceFolder}/TopstepX.Bot.sln"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-solution",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/TopstepX.Bot.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": [
        "clean",
        "${workspaceFolder}/TopstepX.Bot.sln"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-orchestrator",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/UnifiedOrchestrator/UnifiedOrchestrator.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        }
      }
    },
    {
      "label": "run-tests",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/TopstepX.Bot.sln",
        "--no-build",
        "--verbosity",
        "normal"
      ],
      "problemMatcher": "$msCompile",
      "group": "test"
    },
    {
      "label": "check-python",
      "type": "shell",
      "command": "python --version && pip show project-x-py",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "verify-env",
      "type": "shell",
      "windows": {
        "command": "if (Test-Path .env) { Write-Host '.env file exists' -ForegroundColor Green } else { Write-Host '.env file missing!' -ForegroundColor Red }"
      },
      "linux": {
        "command": "[ -f .env ] && echo '.env file exists' || echo '.env file missing!'"
      },
      "osx": {
        "command": "[ -f .env ] && echo '.env file exists' || echo '.env file missing!'"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
