{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trading Bot Configuration Schema",
  "description": "Schema for validating trading bot configuration files",
  "type": "object",
  "properties": {
    "TradingLimits": {
      "type": "object",
      "properties": {
        "MaxDailyLoss": {
          "type": "number",
          "minimum": 500,
          "maximum": 5000,
          "description": "Maximum daily loss in USD"
        },
        "MaxPositionSize": {
          "type": "number", 
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum position size in contracts"
        }
      },
      "required": ["MaxDailyLoss", "MaxPositionSize"]
    },
    "Thresholds": {
      "type": "object",
      "properties": {
        "ConfidenceMin": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 0.9,
          "default": 0.65,
          "description": "Minimum confidence threshold for signal generation"
        },
        "FeatureDriftThreshold": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 0.5,
          "default": 0.3,
          "description": "Feature drift detection threshold"
        },
        "MaxOrderBookImbalance": {
          "type": "number",
          "minimum": 0.6,
          "maximum": 0.9,
          "default": 0.8,
          "description": "Maximum allowed order book imbalance"
        }
      }
    },
    "ContractSpecs": {
      "type": "object",
      "patternProperties": {
        "^(ES|NQ)$": {
          "type": "object",
          "properties": {
            "TickSize": {
              "type": "number",
              "enum": [0.25],
              "description": "ES/NQ tick size must be 0.25"
            },
            "ContractSize": {
              "type": "number",
              "minimum": 1
            }
          },
          "required": ["TickSize", "ContractSize"]
        }
      }
    }
  },
  "additionalProperties": false
}